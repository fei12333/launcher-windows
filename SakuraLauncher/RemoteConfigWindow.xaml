<Window
    x:Class="SakuraLauncher.RemoteConfigWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="远程管理配置"
    Width="440"
    Background="{StaticResource MaterialDesignPaper}"
    SizeToContent="Height"
    TextElement.FontSize="15"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <StackPanel>
        <materialDesign:Card Margin="16" Padding="8">
            <StackPanel>
                <TextBox
                    x:Name="password"
                    Margin="8"
                    materialDesign:HintAssist.Hint="管理密码 (8 位以上)"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                <TextBlock Padding="8" TextWrapping="WrapWithOverflow">
                    远程管理采用端到端加密进行通信，请设置一个安全的密码来确保其他人无法控制您的启动器<LineBreak />
                    该功能为高级功能，您需要为自己的设备安全负责，SakuraFrp 不为误用此功能造成的损失承担任何责任</TextBlock>
                <CheckBox x:Name="agreement" Margin="8">
                    <TextBlock TextWrapping="WrapWithOverflow">
                        我已仔细阅读上述内容，并且同意承担该功能可能带来的安全风险
                    </TextBlock>
                </CheckBox>
            </StackPanel>
        </materialDesign:Card>
        <Button
            Margin="16,0,16,16"
            Click="ButtonUpdate_Click"
            Content="更新"
            Style="{StaticResource MaterialDesignRaisedDarkButton}" />
    </StackPanel>
</Window>
